@{
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="height:75vh;">
    <div class="card shadow p-4" style="width:380px;">
        <h3 class="text-center mb-4">Crear Cuenta</h3>

        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input name="username" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input name="password" type="password" class="form-control" />
            </div>

            <button class="btn btn-success w-100" type="submit">Registrarse</button>
        </form>

        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="alert alert-danger mt-2">@e.ErrorMessage</div>
        }

        <div class="text-center mt-3">
            <small>¿Ya tenés cuenta? <a asp-controller="Account" asp-action="Login">Iniciar Sesión</a></small>
        </div>
    </div>
</div>
