@{
    ViewData["Title"] = "Listado";
}
@await Html.PartialAsync("AlumnoMenu")

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Alumnos</h2>
        <div>
            <input id="alumnosSearch" class="form-control d-inline-block" style="width:260px" placeholder="Buscar por nombre / id" />
        </div>
    </div>

    <!-- filtros rápidos -->
    <div class="mb-3">
        <div class="btn-group" role="group" aria-label="Filtros">
            <button class="btn btn-outline-secondary">Todos</button>
            <button class="btn btn-outline-secondary">Activos</button>
            <button class="btn btn-outline-secondary">Inactivos</button>
        </div>
        <a class="btn btn-success float-right" href="#">Agregar alumno</a>
    </div>

    <!-- tabla de ejemplo -->
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Documento / ID</th>
                <th>Curso</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
