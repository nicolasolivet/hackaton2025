@{
    ViewData["Title"] = "Materias";
}

@await Html.PartialAsync("AlumnoMenu")

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mis materias</h2>

        <div>
            <select class="form-control" id="filtroCiclo" style="width:160px">
                <option value="">Todos los años</option>
                <option>1º</option>
                <option>2º</option>
            </select>
        </div>
    </div>

    <div class="row">
        @{
            var materias = (IEnumerable<dynamic>)ViewBag.Materias;
        }

        @if (materias != null && materias.Any())
        {
            foreach (var m in materias)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">@m.Nombre</h5>
                            <p class="card-text">Profesor: @m.Profesor</p>
                            <p class="card-text"><small class="text-muted">Horario: @m.Horario</small></p>

                            <div class="mt-auto">
                                <a href="@Url.Action("MateriaDetalle", "Alumnos", new { id = m.Id })"
                                   class="btn btn-sm btn-outline-primary">
                                    Ver
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No hay materias para mostrar.</div>
            </div>
        }
    </div>
</div>