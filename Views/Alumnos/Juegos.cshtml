@{
    ViewData["Title"] = "Juegos";
}
@await Html.PartialAsync("AlumnoMenu")

<div class="container mt-4">
    <h2>Juegos - Materia @ViewBag.MateriaId</h2>

    @{
        var juegos = (IEnumerable<dynamic>)ViewBag.Juegos;
    }

    @if (juegos == null || !juegos.Any())
    {
        <div class="alert alert-info">No hay juegos configurados para esta materia.</div>
    }
    else
    {
        <div class="row mt-3">
            @foreach (var g in juegos)
            {
                <div class="col-md-4 mb-3">
                    <div class="card p-3">
                        <h5>@g.Titulo</h5>
                        <a class="btn btn-primary" href="#" onclick="alert('Iniciar juego: @g.Titulo (placeholder)'); return false;">Jugar</a>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3">
        <a class="btn btn-outline-secondary" href="@Url.Action("MateriaDetalle", "Alumnos", new { id = ViewBag.MateriaId })">Volver a materia</a>
    </div>
</div>