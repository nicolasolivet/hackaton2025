@model IEnumerable<ctrlcctrlv.Controllers.MateriaViewModel>

@{
    ViewData["Title"] = "Lista de Materias";
}

<h1 class="display-4 text-center">Lista de Materias</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">No hay materias para mostrar.</div>
}
else
{
    <div class="container mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Codigo</td>
                        <td>@m.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
